{
  "name": "secure-messenger",
  "version": "1.0.0",
  "description": "Secure Messenger Desktop - Chat List + Sync Simulator",
  "main": "dist-electron/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "start": "electron .",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "package": "npm run build && electron-builder",
    "postinstall": "electron-rebuild",
    "rebuild": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Masembe0757/realtime_messenger_app.git"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "messenger",
    "sqlite"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Masembe0757/realtime_messenger_app/issues"
  },
  "homepage": "https://github.com/Masembe0757/realtime_messenger_app#readme",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@reduxjs/toolkit": "^2.11.2",
    "better-sqlite3": "^12.6.2",
    "electron": "^28.3.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0",
    "react-window": "^2.2.6",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.secure-messenger.app",
    "productName": "Secure Messenger",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
